<!DOCTYPE html>
<html>
  <head>
    <% include partials/head  %> 
  </head>
  <body>
    <% include partials/menu %>
    <div class="container-fluid bg-3 text-center">    
      <h3><%= page %></h3><br>
      <div class="row">
        <table class='table table-striped table-responsive-md btm-table'>
          <thead>
              <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Price</th>
                  <th>&nbsp;</th>
                  <th>&nbsp;</th>
              </tr>
          </thead>
          <tbody>
              <% product.forEach(function(product){ %>
                  <tr>
                      <td><%=product._id %></td>
                      <td><%=product.name %></td>
                      <td><%=product.price %></td>
                      <td>
                          <form action='updateform/<%=product._id %>' method="POST">
                              <button type="submit">Update</button>
                          </form>
                      </td>
                      <td>
                      <form action='<%=product._id %>/delete' method="POST">
                          <button type="submit">Delete</button>
                      </form>
                  </td>                   
                  </tr>
               <% });  %>   
          </tbody>
      </table>


      </div>
    </div>
    </body>
    <% include partials/script %>
    
  
</html>
